{% set cartProd = cartProd|length %}
{% extends "base.html.twig" %}
{% block javascripts %}
	<script src="scripts/searchFeature.js"></script>
{% endblock %}

{% block body %}
	
	<h1 class="fw-bold ">Prodotti</h1>
	<div class="px-5">
		<div class="cerca mx-4 px-4">
			<div class="col">
				<input id="searchbar" type="text" class="form-control" placeholder="Cerca Prodotto" aria-label="First name">
			</div>
			<div class="dropdown mx-2">
				<button class="btn btn-secondary dropdown-toggle bg-success border border-success" type="button" data-bs-toggle="dropdown" aria-expanded="false">
					Categoria
				</button>
				<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
					<p class="dropdown-item" role="button" id="category">Tutto</p>
					<li><hr class="dropdown-divider"></li>
					{% for category in categories %}
						<p class="dropdown-item" role="button" id="category">{{category.categoria}}</p>
					{% endfor %}
					
				</div>
			</div>
			<div class="dropdown">
				<button class="btn btn-secondary dropdown-toggle bg-success border border-success" type="button" data-bs-toggle="dropdown" aria-expanded="false">
					Prezzo
				</button>
				<ul class="dropdown-menu">
					<li>
						<a class="dropdown-item" href="#">0€ - 50€</a>
					</li>
					<li>
						<a class="dropdown-item" href="#">50€ - 100€</a>
					</li>
					<li>
						<a class="dropdown-item" href="#">100€ - 200€</a>
					</li>
				</ul>
			</div>
		</div>

		<div class="products px-5">
			<ul class="list-group">
				{% for product in products %}
					{% include '/components/prodotto.html.twig' with {
				                        img: product.imagePath, 
				                        nome: product.nome, 
				                        prezzo: product.prezzo,
										descrizione: product.descrizione,
										categoria: product.categoria
				                    } %}
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %} 